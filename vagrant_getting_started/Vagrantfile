# -*- mode: ruby -*-
# vi: set ft=ruby :

Vagrant.configure("2") do |config|

  config.vm.define :devops do |devops|
    devops.vm.box = "centosbox"
    devops.vm.provision :shell, :path => "bootstrap-devops.sh"
    devops.vm.hostname = "devops"
    devops.vm.usable_port_range = 2222..2222
  end

  config.vm.define :node1 do |node1|
    node1.vm.box = "centosbox"
    node1.vm.provision :shell, :path => "bootstrap-node.sh"
    node1.vm.hostname = "node1"
    node1.vm.usable_port_range = 2201..2201
  end

  config.vm.define :node2 do |node2|
    node2.vm.box = "centosbox"
    node2.vm.provision :shell, :path => "bootstrap-node.sh"
    node2.vm.hostname = "node2"
    node2.vm.usable_port_range = 2202..2202
  end

end


